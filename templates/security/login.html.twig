<!DOCTYPE html>
<html lang="en">
    {% include("includes/head.html.twig") %}
    <body ng-app="jobs" class="page-wrapper chiller-theme toggled">
        {% block body %}
        <div class="container-fluid d-flex justify-content-center">

            <div class="row h-100">
                <div class="col-sm-12 my-auto">
                    <h2>Connexion en cours</h2>
                    {% if error %}
                    <h3>{{ error.messageKey|trans(error.messageData, 'security') }}</h3>
                    {% endif %}
                </div>
            </div>


            <form action="{{ path('login') }}" method="post" id="login_form" class="d-none">
                <label for="registered_visitor_username">Username:</label>
                <input type="text" id="registered_visitor_username" name="registered_visitor_username" value="{{ last_username }}"/>

                <label for="registered_visitor_password">Password:</label>
                <input type="password" id="registered_visitor_password" name="registered_visitor_password" value="{{ last_password }}"/>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account"/>
                #}

                <button type="submit">login</button>
            </form>
        </div>
        {% endblock %}
    </body>

<script type="text/javascript">
    document.getElementById("login_form").submit();
</script>

</html>